Q2: Find the inverse of:
i) 111 mod 11111
111 = 11111 (0) + 111
11111 = 111 (100) + 11
111 = 11 (10) + 1
11 = 1 (11) + 0

gcd = 1

1 = 111 (1) + 11 (-10)
1 = 111 (1) + (11111 + 111 (-100)) (-10)
1 = 111 (1) + 11111 (-10) + 111 (1000)
1 = 11111 (-10) + 111 (1001)
1 = 11111 (-10) + (111 + 11111 (0)) (1001)
1 = 11111 (-10) + 111 (1001) + 11111 (0)

inverse = 1001

111 × 1001 mod 11111 = 1 mod 11111
--------
ii) 19 mod 7539
19 = 7539 (0) + 19
7539 = 19 (396) + 15
19 = 15 (1) + 4
15 = 4 (3) + 3
4 = 3 (1) + 1
3 = 1 (3) + 0

gcd = 1

1 = 4 (1) + 3 (-1)
1 = 4 (1) + (15 + 4 (-3)) (-1)
1 = 4 (1) + 15 (-1) + 4 (3)
1 = 15 (-1) + 4 (4)
1 = 15 (-1) + (19 + 15 (-1)) (4)
1 = 15 (-1) + 19 (4) + 15 (-4)
1 = 19 (4) + 15 (-5)
1 = 19 (4) + (7539 + 19 (-396)) (-5)
1 = 19 (4) + 7539 (-5) + 19 (1980)
1 = 7539 (-5) + 19 (1984)
1 = 7539 (-5) + (19 + 7539 (0)) (1984)
1 = 7539 (-5) + 19 (1984) + 7539 (0)

inverse = 1984

19 × 1984 mod 7539 = 1 mod 7539
--------
iii) 229 mod 69713
229 = 69713 (0) + 229
69713 = 229 (304) + 97
229 = 97 (2) + 35
97 = 35 (2) + 27
35 = 27 (1) + 8
27 = 8 (3) + 3
8 = 3 (2) + 2
3 = 2 (1) + 1
2 = 1 (2) + 0

gcd = 1

1 = 3 (1) + 2 (-1)
1 = 3 (1) + (8 + 3 (-2)) (-1)
1 = 3 (1) + 8 (-1) + 3 (2)
1 = 8 (-1) + 3 (3)
1 = 8 (-1) + (27 + 8 (-3)) (3)
1 = 8 (-1) + 27 (3) + 8 (-9)
1 = 27 (3) + 8 (-10)
1 = 27 (3) + (35 + 27 (-1)) (-10)
1 = 27 (3) + 35 (-10) + 27 (10)
1 = 35 (-10) + 27 (13)
1 = 35 (-10) + (97 + 35 (-2)) (13)
1 = 35 (-10) + 97 (13) + 35 (-26)
1 = 97 (13) + 35 (-36)
1 = 97 (13) + (229 + 97 (-2)) (-36)
1 = 97 (13) + 229 (-36) + 97 (72)
1 = 229 (-36) + 97 (85)
1 = 229 (-36) + (69713 + 229 (-304)) (85)
1 = 229 (-36) + 69713 (85) + 229 (-25840)
1 = 69713 (85) + 229 (-25876)
1 = 69713 (85) + (229 + 69713 (0)) (-25876)
1 = 69713 (85) + 229 (-25876) + 69713 (0)

inverse = 43837

229 × 43837 mod 69713 = 1 mod 69713
--------
